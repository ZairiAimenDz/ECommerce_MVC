
<div class="product-card">
    <a class="h-100 w-100" href="/Details/@Id">
        <div class="product-tumb">
            <img src="@ProductImgURL" alt="">

        </div>
    </a>
    <div class="product-details">
        <span class="product-catagory mb-0">@Category - @ProductBrand</span>
        
        <h4 class="description mb-1"><a href="/Details/@Id">@Name</a></h4>
        <p class="description">@Description</p>
        <div class="product-bottom-details">
            <div class="product-price">@if (OldPrice != 0)
            {<small>@OldPrice @Constants.Currency</small>} <p>@Price @Constants.Currency</p></div>
        </div>
    </div>
</div>

<style>
    * {
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    a {
        text-decoration: none;
    }

    .product-card {
        margin:.5em;@*
        width: 17em;*@
        position: relative;
        box-shadow: 0 1px 1px #dfdfdf;
        background: #fafafa;
    }

    .description {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .badge {
        position: absolute;
        left: 0;
        top: 20px;
        border-radius:0;
        text-transform: uppercase;
        font-size: 13px;
        font-weight: 700;
        background: red;
        color: #fff;
        padding: 3px 10px;
    }

    .product-tumb {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 12em;
        background: #f0f0f0;
    }

        .product-tumb img {
            max-width: 100%;
            max-height: 100%;
        }

    .product-details {
        padding: 1em;
    }

    .product-catagory {
        display: block;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        color: #ccc;
    }

    .product-details h4 a {
        font-weight: 500;
        color: #363636;
        text-decoration: none;
        transition: 0.3s;
    }

        .product-details h4 a:hover {
            color: #fbb72c;
        }

    .product-details p {
        font-size: 15px;
        line-height: 22px;
        margin-bottom: 18px;
        color: #999;
    }

    .product-bottom-details {
        overflow: hidden;
        border-top: 1px solid #eee;
        padding-top: 20px;
    }

        .product-bottom-details div {
            float: left;
            width: 50%;
        }

    .product-price {
        font-size: 18px;
        color: #fbb72c;
        font-weight: 600;
    }

        .product-price small {
            font-size: 80%;
            font-weight: 400;
            text-decoration: line-through;
            display: inline-block;
            margin-right: 5px;
        }

    .product-links {
        text-align: right;
    }

        .product-links button {
            border:none;
            background-color:transparent;
            display: inline-block;
            margin-left: 5px;
            color: #e1e1e1;
            transition: 0.3s;
            font-size: 17px;
        }

            .product-links button:hover {
                color: #fbb72c;
            }
</style>
@code {
    [Parameter]
    public string ProductImgURL { get; set; }

    [Parameter]
    public Guid Id { get; set; }

    [Parameter]
    public string ProductBrand { get; set; }

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string Category { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public double Price{ get; set; }

    [Parameter]
    public double OldPrice { get; set; }

}
